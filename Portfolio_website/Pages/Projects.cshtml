@page
@model Portfolio_website.Pages.ProjectsModel
@{
    ViewData["Title"] = "Projects";
}

<div>
    @foreach(Portfolio_website.Entities.Project element in @Model.Projects)
    {
    <a href="/ProjectPage/@Model.Projects.FindIndex(x => x.Id == element.Id)" asp->
        <div style="border: 2px #2c2f33; border-style: groove; margin-top: 20px; height: 15vw">
            <h4 style="float: left; margin-left: 2%">@element.Name</h4>
            <img style="float: right; max-height: 80%; max-width: 10%; object-fit: cover; object-position: center; margin: 2%"  src="@element.ImagePath" />
            <br>
            <p style="margin-top: 5px; color: black;">@element.SmallDescriptiom</p>
        </div>
    </a>
    }
</div>

