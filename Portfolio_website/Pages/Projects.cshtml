@page
@model Portfolio_website.Pages.ProjectsModel
@{
    ViewData["Title"] = "Projects";
}

<div>
    @foreach(Portfolio_website.Entities.Project element in @Model.Projects)
    {
    <a href="/ProjectPage/@element.Id" asp->
        <div style="border: 2px #2c2f33; border-style: groove; margin-top: 20px;">
            <h4 style="float: left;">@element.Name</h4>
            <img style="float: right;" src="@element.ImagePath" />
            <br>
            <p style="margin-top: 5px;">@element.SmallDescriptiom</p>
        </div>
    </a>
    }
</div>

